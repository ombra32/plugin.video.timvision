<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
  <category label="Account">
    <setting id="username" type="text" label="Username" default=""/>
    <setting id="password" type="text" option="hidden" label="Password" default=""/>
    <setting type="sep"/>
    <!-- Actions -->
    <setting id="logout" type="action" label="Logout" action="RunPlugin(plugin://plugin.video.timvision/?action=logout)" option="close"/>
  </category>
  <category label="Contenuti">
    <setting id="unique_season" type="bool" label="Spiana le serie con un'unica stagione" value="true" default="true"/>
    <setting id="prefer_hd" type="bool" label="Preferisci HD" value="true" default="true"/>
    <setting id="always_resume" type="bool" label="Riprendi sempre la visione" value="true" default="true"/>
    <setting id="play_next_episode" type="bool" label="Riproduci automaticamente l'episodio successivo" value="true" default="true" visible="false" />
  </category>
  <category label="Viste">
    <setting id="custom_view_enabled" label="Abilita viste personalizzate" type="bool" value="false" default="false"/>
    <setting id="view_movies" label="Vista film" type="select" values='Lista Larga|Muro|Fanart|Lista|Poster|Spostamento|Muro Info' default='Poster' enable="eq(-1,true)"/>
    <setting id="view_tvshows" label="Vista serie" type="select" values='Lista Larga|Muro|Fanart|Lista|Poster|Spostamento|Muro Info|Banner' default='Banner' enable="eq(-2,true)"/>
    <setting id="view_seasons" label="Vista stagioni" type="select" values='Lista Larga|Muro|Fanart|Lista|Poster|Spostamento|Muro Info' default='Lista Larga' enable="eq(-3,true)"/>
    <setting id="view_episodes" label="Vista episodi" type="select" values='Lista Larga|Muro di icone' default='Lista Larga' enable="eq(-4,true)"/>
    <setting type="sep"/>
    <setting id="custom_skin_enabled" label="Skin personalizzata (Utenti esperti)" type="bool" value="false" default="false"/>
    <setting id="view_skin_movies" label="Vista film" type="number" value='55' default='55' enable="eq(-1,true)"/>
    <setting id="view_skin_tvshows" label="Vista serie" type="number" value='55' default='55' enable="eq(-2,true)"/>
    <setting id="view_skin_seasons" label="Vista stagioni" type="number" value='55' default='55' enable="eq(-3,true)"/>
    <setting id="view_skin_episodes" label="Vista episodi" type="number" value='55' default='55' enable="eq(-4,true)"/>
  </category>
  <category label="Debug">
    <setting id="log_all_apicalls" label="Log api calls" type="bool" value="false" default="false"/>
    <setting type="sep"/>
    <setting id="abilita_log_desktop" label="Log file su desktop" type="bool" value="false" default="false"/>
    <setting id="logd_timvision" label="TimVision log" type="bool" value="true" default="true" enable="eq(-1,true)"/>
    <setting id="logd_player" label="Player log" type="bool" value="true" default="true" enable="eq(-2,true)"/>
    <setting id="logd_widevine" label="Widevine log" type="bool" value="true" default="true" enable="eq(-3,true)"/>
    <!-- Hidden -->
    <setting id="timvision_service_port" value="8001" visible="false"/>
    <setting id="kodi_version_alert_shown" type="bool" value="false" default="false" visible="false"/>
  </category>
</settings>
